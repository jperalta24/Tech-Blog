<div class="card">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{user.username}}</h6>
    <p class="card-text">{{content}}</p>
  </div>
  <div class="card-footer">
    <a href="/post/{{id}}" class="card-link">Post Details</a>
  </div>
</div>